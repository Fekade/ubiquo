<ul id="job_status_<%= job.id %>" class="priority_list">
  <% (1..3).to_a.map do |i| %>
    <% current = (10**i == (job.priority.to_i)) %>
    <li class="priority<%= i %>">
      <%= link_to "", ubiquo.job_path(job, :job => {:priority => (10**i)}),  :method => :put, :remote => true, :title => priority_name(10**i), :class => ('off' unless current) %>
    </li>
  <% end %>
</ul>
